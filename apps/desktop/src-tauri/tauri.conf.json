{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Vinyl Transfer Cleaner",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Vinyl Transfer Cleaner",
        "width": 1200,
        "height": 800
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.vinyl.cleanup"
    },
    "security": {
      "csp": null
    }
  }
}
